<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
    <Style x:Key="SharkSpirit.Button.Rounded" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource SharkSpirit.Button.MouseOver.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource SharkSpirit.Button.Foreground}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>
            </Trigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>